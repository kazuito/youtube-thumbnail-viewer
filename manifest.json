{
  "manifest_version": 3,
  "name": "YouTube Thumbnailer",
  "short_name": "YT Thumb",
  "version": "0.0.1",
  "description": "Display thumbnail image in the video description.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["webNavigation", "tabs", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"]
}
